# =============================================================================
# Auth Service Environment Variables
# Copy this file to .env and update with your values
# =============================================================================

# Server Configuration
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=jdbc:postgresql://localhost:5432/auth-db
DB_USERNAME=atulpundir
DB_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (REQUIRED - change this in production!)
# Must be at least 256 bits (32+ characters) for HS256
JWT_SECRET=your-super-secret-256-bit-key-change-this-in-production

# CORS Configuration
# Set to false when behind reverse proxy (Nginx)
CORS_ENABLED=true
CORS_ORIGINS=*

# Proxy Configuration
# Set to FRAMEWORK when behind reverse proxy to trust X-Forwarded-* headers
# Options: NONE, NATIVE, FRAMEWORK
FORWARD_HEADERS_STRATEGY=NONE

# Logging
SHOW_SQL=false
SQL_LOGGING=INFO
SQL_BIND_LOGGING=INFO
SECURITY_LOG_LEVEL=INFO
